<style>
    input{border:none; font-size: 15px; width:100px}
</style>

<h1 style="text-align:center">Admin Page : {{data.name}}</h1>

<h1>{{ title1 }}</h1>
<table>
    <tr>
        <td>Vin</td>
        <td>Model</td>
        <td>Type</td>
        <td>Price</td>
        <td>BuyYear</td>
        <td>CusView</td>
    </tr>
    {{#each vehicle}}
    <form method="post">
    <tr>
        <td>{{Vin}}</td>
        <td><input type="text" name="model" placeholder={{Model}} value={{Model}} /></td>
        <td><input type="text" name="type" placeholder={{Type}} value={{Type}} /></td>
        <td><input type="text" name="price" placeholder={{Price}} value={{Price}} /></td>
        <td><input type="text" name="buyyear" placeholder={{BuyYear}} value={{BuyYear}} /></td>
        <td><input type="text" name="cusview" placeholder={{CusView}} value={{CusView}} /></td>
        <td style="border: none; margin-left: 5px; width:70px">
            <button 
            style="margin-left: 10px;" 
            name="updBtnV"
            type="submit" 
            value="{{Vin}}"
            >
            수정
            </button>
        </td>
        <td style="border: none; margin-left: 5px; width:70px">
            <button 
            style="margin-left: 10px;" 
            name="delBtnV"
            type="submit" 
            value="{{Vin}}"
            >
            삭제
            </button>
        </td>
    </tr>
    </form>
    {{/each}}
</table>

<table>
 <form method="post">
    <tr>
        <td></td>
        <td><input type="text" name="newmodel" /></td>
        <td><input type="text" name="newtype" /></td>
        <td><input type="text" name="newprice" /></td>
        <td><input type="text" name="newbuyyear" /></td>
        <td><input type="text" name="newcusview" /></td>
        <td style="border: none; margin-left: 5px; width:70px">
            <button 
            style="margin-left: 10px;" 
            name="insBtnV"
            type="submit" 
            value="1"
            >
            추가
            </button>
        </td>
    </tr>
 </form>
</table>

<form method="post">
    <button name="prev" type="submit" value="1" style="margin:14px 0px 0px 450px"><</button>
    <button name="next" type="submit" value="1">></button>
</form>


<h1>{{ title2 }}</h1>
<table>
    <tr>
        <td>idSale</td>
        <td>Vehicle_Vin</td>
        <td>Customer_Ssn</td>
        <td>State</td>
    </tr>
    {{#each sale}}
    <form method="post">
    <tr>
        <td>{{idSale}}</td>
        <td><input type="text" name="vehicle_vin" placeholder={{Vehicle_Vin}} value={{Vehicle_Vin}}></td>
        <td><input type="text" name="customer_ssn" placeholder={{Customer_Ssn}} value={{Customer_Ssn}}></td>
        <td><input type="text" name="state" placeholder={{State}} value={{State}}></td>
        <td style="border: none; margin-left: 5px; width:60px">
            <button 
            style="margin-left: 10px;" 
            name="updBtnS"
            type="submit" 
            value="{{idSale}}"
            >
            수정
            </button>
        </td>
        <td style="border: none; margin-left: 5px; width:100px">
            <button 
            style="margin-left: 10px;" 
            name="SuccessBtnS" 
            type="submit" 
            value="{{idSale}}"
            >
            판매 성공
            </button>
        </td>
        <td style="border: none; margin-left: 5px; width:100px">
            <button 
            style="margin-left: 10px;" 
            name="failBtnS" 
            type="submit" 
            value="{{idSale}}"
            >
            판매 실패
            </button>
        </td>
    </tr>
    </form>
    {{/each}}
</table>